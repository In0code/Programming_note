package day0703;

import java.text.SimpleDateFormat;
import java.util.Date;
import java.util.Locale;
import java.util.StringTokenizer;

public class Work0703 {

	public Work0703() {
	}// Work0703

	/**
	 * 1.아래의 CSV데이터를 매개변수로 입력받아 배열로 반환하는 일을 하는 method를 작성하세요 String csvData=“강다연,김다영
	 * 김선경.김인영,김주민~박상준,박서현,서효민”;
	 * 
	 * 김씨는 성을 제외하고 이름만 배열에 넣어서 반환할 것.
	 * 
	 */
	public void nameData() {
		String csvData = "강다연,김다영 김선경.김인영,김주민~박상준,박서현,서효민";
		StringTokenizer st = new StringTokenizer(csvData, ",.~김 ", false);

		String name = "";
		while (st.hasMoreTokens()) {
			name = st.nextToken();
			System.out.print(name + "  ");
		}
		System.out.println();
	}// Data

	/**
	 * 2. 날짜 0,1,2,3을 입력받는 method 만들고 문자열로 날짜를 반환하는 method작성하세요. 반환되는 형식은 아래와 같습니다.
	 * “년-월-일 시:분:초 오전|오후 요일”
	 * 
	 * 입력되는 0,1,2,3은 아래의 국가의 날짜로 설정되어야합니다. 0-한국, 1-미국, 2-일본, 3-캐나다
	 * 
	 * 0,1,2,3이 아니라면 0으로 설정할 것.
	 * 
	 */
	public static final int KOREA = 0;
	public static final int USA = 1;
	public static final int JAPAN = 2;
	public static final int CANADA = 3;

	public void Day(int national) {
		Date date = new Date();
		SimpleDateFormat korea = new SimpleDateFormat("yyyy년-MM월- dd일 hh시:mm분:ss초 a EEEE", Locale.KOREAN);
		SimpleDateFormat usa = new SimpleDateFormat("yyyy년-MM월- dd일 hh시:mm분:ss초 a EEEE", Locale.US);
		SimpleDateFormat japan = new SimpleDateFormat("yyyy년-MM월- dd일 hh시:mm분:ss초 a EEEE", Locale.JAPAN);
		SimpleDateFormat canada = new SimpleDateFormat("yyyy년-MM월- dd일 hh시:mm분:ss초 a EEEE", Locale.CANADA);
		String format = korea.format(date);
		String format1 = usa.format(date);
		String format2 = japan.format(date);
		String format3 = canada.format(date);

		switch (national) {
		case KOREA:
			System.out.println(format);
			break;
		case USA:
			System.out.println(format1);
			break;
		case JAPAN:
			System.out.println(format2);
			break;
		case CANADA:
			System.out.println(format3);
			break;

		default:
			System.out.println(format);
		}// switch
	}// Day

	public static void main(String[] args) {

		Work0703 w = new Work0703();
		w.nameData();
		System.out.println("-------------------------");
		w.Day(4);

	}// main

}// class
